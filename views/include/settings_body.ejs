
 <% 
 const date1 = new Date();
 const date2 = expiretime

 function getDifferenceInDays(date1, date2) {
 const diffInMs = Math.abs(date2 - date1);
 return diffInMs / (1000 * 60 * 60 * 24);
 }
%> 

<div class="section mt-2 mb-2">
    <% if (message.length > 0 ) { %>
        <% if (message == 'delhistorydone') { %> <br>
           <div class="alert alert-imaged alert-danger alert-dismissible fade show" role="alert">
               <div class="icon-wrap">
                <ion-icon name="close-circle-outline"></ion-icon>
               </div>
               <div>
                   Deleted successfully ....
               </div>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
           </div>
        <% } else if (message == 'updated') { %>
            <div class="alert alert-imaged alert-warning alert-dismissible fade show" role="alert">
                <div class="icon-wrap">
                 <ion-icon name="close-circle-outline"></ion-icon>
                </div>
                <div>
                    Updated successfully ....
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
       <% } %>
    <div class="goals">
        <!-- item -->
        <% if (role == 'admin') { %>
        <div class="item">
            <a href="/userlist" class="in">
                <div>
                    <h4>List users</h4>
                    <p>Admin panel</p>
                </div>
                <div class="price"></div>
            </a>
        </div>
        <% } %>
        <div class="item">
            <a data-bs-toggle="modal" data-bs-target="#user" href="#" class="in">
                <div>
                    <h4>Change username</h4>
                    <p>badal username kaaga</p>
                </div>
                <div class="price"></div>
            </a>
        </div>
        <div class="item">
            <a data-bs-toggle="modal" data-bs-target="#pass" href="#" class="in">
                <div>
                    <h4>Change Password</h4>
                    <p>badal Password kaaga</p>
                </div>
                <div class="price"></div>
            </a>
        </div>
        <div class="item">
            <a href="/logout" class="in">
                <div>
                    <h4>Logout</h4>
                    <p>Kabax dhamaan ciwaanka</p>
                </div>
                <div class="price"></div>
            </a>
