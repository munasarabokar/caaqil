        <!-- * item -->
    </div>

</div>

<% if (role == 'admin') { %>
    <div class="listview-title mt-2"> You are the admin of this app </strong></div>
 <% } else { %>
    <div class="listview-title mt-2"> Wuxuu dhacaaya  : <%= getDifferenceInDays(date1, date2).toFixed(0) %> Maalin kadib oo ku beegan :  <strong><%= expiretime.toDateString() %> </strong></div>
   
   
<% } %>

<div class="modal fade action-sheet" id="user" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit username</h5>
            </div>
            <div class="modal-body">
                <div class="action-sheet-content">
                    <form action="/changeuser" method="post" autocomplete="off">
                        <input type="hidden" name="id" value="13">
                        <div class="form-group basic">
                            <div class="input-wrapper">
                                <label class="label" for="cardnumber1">username</label>
                                <input type="hidden" value="<%= info.user_id %>" name="user_id" id="user_id">
                                <input type="text" id="cardnumber1" value="<%= info.user_name %>"  name="user_name" id="name" class="form-control"
                                    placeholder="username" required>
                            </div>
                        </div>
                        <div class="form-group basic mt-2">
                            <button type="submit" class="btn btn-primary btn-block btn-lg"
                                data-bs-dismiss="modal">Update now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade action-sheet" id="pass" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit password</h5>
            </div>
